<h1>Show Post</h1>

<%= if @live_action in [:edit] do %>
  <%= live_modal @socket, WWeb.CMS.PostLive.FormComponent,
    id: @post.id,
    title: @page_title,
    action: @live_action,
    post: @post,
    return_to: Routes.cms_post_show_path(@socket, :show, @post) %>
<% end %>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

  <li>
    <strong>Published:</strong>
    <%= @post.published %>
  </li>

  <li>
    <strong>Published at:</strong>
    <%= @post.published_at %>
  </li>

  <li>
    <strong>Views:</strong>
    <%= @post.views %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.cms_post_show_path(@socket, :edit, @post), class: "button" %></span>
<span><%= live_redirect "Back", to: Routes.cms_post_index_path(@socket, :index) %></span>
