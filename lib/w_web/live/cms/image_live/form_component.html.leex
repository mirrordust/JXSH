<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "image-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :location %>
  <%= text_input f, :location %>
  <%= error_tag f, :location %>

  <%= label f, :size %>
  <%= number_input f, :size, step: "any" %>
  <%= error_tag f, :size %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
